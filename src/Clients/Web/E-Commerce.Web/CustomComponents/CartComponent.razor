@inject NavigationManager NavigationManager

<div class="row justify-content-center">
    <div class="d-flex">
        <div class="ml-auto p-2 mr-2">
            <button class="btn btn-success" @onclick="NavigateToProducts">Go products</button>
        </div>
        <div class="ml-auto p-2">
            <button class="btn btn-primary" @onclick="NavigateToCart">Go cart</button>
        </div>
    </div>
</div>

@code{
    private void NavigateToCart()
    {
        NavigationManager.NavigateTo("cartitems");
    }

    private void NavigateToProducts()
    {
        NavigationManager.NavigateTo("products");
    }
}
